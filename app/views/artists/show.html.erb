<h1><%= @artist.name %></h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>image</th>
      <th>category</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= link_to @artist.id, artist_path(@artist) %></td>
      <td><%= link_to @artist.name, artist_path(@artist)  %></td>
      <td><%= image_tag(@artist.img_url, class: 'artist') %></td>
      <td><%= @artist.category %></td>
    </tr>
  </tbody>
</table>
<hr>
<p>
  <%= link_to "Edit Artist", edit_artist_path(@artist), class: "btn btn-default" %>
  <%= link_to "Delete Artist", artist_path(@artist), method: :delete, class: "btn btn-default" %>
</p>
<%= link_to  "Return to Home", artists_path %>
