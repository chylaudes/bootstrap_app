<%= form_for @artist do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "Artist name", class: "form-control", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :img_url %>
    <%= f.text_area :img_url, placeholder: "Image Url", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :category %>
    <%= f.text_field :category, placeholder: "Category", class: "form-control" %>
  </div>
  <%= f.submit "Save Artist", class: "btn btn-block btn-default" %>
<% end %>
