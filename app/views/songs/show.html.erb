<h1><%= @song.name %></h1>
<table class="table table-hover">
  <thead>
    <tr><th>id</th><th>name</th><th>duration</th></tr>
  </thead>
  <tbody>
    <tr>
      <td><%= link_to @song.id, song_path(@song) %></td>
      <td><%= @song.name %></td>
      <td><%= @song.duration %></td>
    </tr>
  </tbody>
</table>
<hr>
<p>
  <%= link_to "Edit Song", edit_song_path( @song), class: "btn btn-default" %>
  <%= link_to "Delete Song", song_path(@song), method: :delete, class: "btn btn-default" %>
</p>
<%= link_to  "Return to Song", songs_path  %>
